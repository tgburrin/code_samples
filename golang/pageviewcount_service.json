        },
        "required_fields": {
            "default": {},
            "initial": {},
            "all": {},
            "insert": { "fields": ["client_id", "name","url"] },
            "delete": { "fields": ["id"] },
            "replace": { "fields": ["id", "client_id", "name", "url"] },
            "update": { "fields": ["id"], "require_an_optional": true }
        }
    }
